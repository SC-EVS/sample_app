<% provide(:title, "Edit user") %>
<h1>Обновление профиля</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label "Имя пользователя" %>
        <%= f.text_field :name %>

        <%= f.label "Электронный адрес" %>
        <%= f.text_field :email %>

        <%= f.label "Пароль" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Подтверждение пароля" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>

    <%#= gravatar_for @user  <a href="http://gravatar.com/emails">change</a> %>

  </div>
</div>
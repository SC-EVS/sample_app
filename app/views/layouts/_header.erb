<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "АРМ \"Команда\"", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Начальная страница", root_path %></li>
          <li><%= link_to "Помощь", help_path %></li>
          <% if signed_in? %>
              <%if current_user.admin==true %>
                  <li><%= link_to "Пользователи", users_path %></li>
              <%end%>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Учетная запись <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Профиль", current_user %></li>
                  <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Выйти", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Авторизироваться", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
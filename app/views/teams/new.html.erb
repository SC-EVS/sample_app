<% provide(:title, 'Add member to team') %>
<h1>Add member to team</h1>
<div class = "something">

</div>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>
        <% if @team.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-error">
                The form contains <%= pluralize(@team.errors.count, "error") %>.
              </div>
              <ul>
                <% @team.errors.full_messages.each do |msg| %>
                    <li>* <%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.label :"Название проекта" %>
        <%#= f.text_field :project_id %>
        <%= f.select :project_id, options_from_collection_for_select(current_user.projects, "id", "project_url"), include_blank: false %>

        <%= f.label :"Электронный адрес пользователя" %>
        <%= f.text_field :user_id%>




        <%= f.submit "Добавить пользователя в команду", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>